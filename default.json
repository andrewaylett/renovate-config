{
  "extends": [
    "config:base",
    ":gitSignOff",
    ":enablePreCommit"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "bump"],
      "automerge": true,
      "automergeType": "pr",
      "prCreation": "not-pending"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "automergeType": "pr"
    },
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "prCreation": "not-pending"
  },
  "platformAutomerge": true,
  "platformCommit": true,
  "postUpdateOptions": ["npmDedupe"],
  "branchConcurrentLimit": 4,
  "prConcurrentLimit":2
}
